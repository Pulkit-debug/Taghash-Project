<body>
  <h1>Polling System</h1>


  <div>
    <form action="/vote" method="POST">
      <label for="fname">Please Enter your Full Name</label>
      <input type="text" id="fname" name="name" placeholder="Your Fullname..">


      <label for="vote">Will you be willing to vote?</label>
      <select id="vote" name="vote">
        <option value="yes">YES</option>
        <option value="no">NO</option>
      </select>

      <label>Please Enter your date of vote submission.</label>
      <input type="text" id="date" name="date" placeholder="dd/mm/yyyy">
      <label id="errorLabel"></label>

      <input type="submit" value="Submit">
    </form>
  </div>

  
  

  <form action="/data" method="get">
    <div id="data-btn">
      <button type="submit" class="btn data-btn btn-outline-success">All Data</button>
    </div>
  </form>



  <script src="../static/index.js"></script>

</body>

